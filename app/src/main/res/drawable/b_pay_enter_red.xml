<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
 <item android:state_pressed="true"
     >
     <shape>
         <solid android:color="@color/red" />
         <corners android:radius="@dimen/action_button_radius" />
         <stroke android:width="@dimen/space_nano" android:color="@color/sell_action_button_unpressed_dark" />
     </shape>
 </item>
    <item android:state_pressed="false">
        <shape>
            <solid android:color="@color/sell_action_button_unpressed_dark" />
            <corners android:radius="@dimen/action_button_radius" />
            <stroke android:width="@dimen/space_nano" android:color="@color/red" />
        </shape>
    </item>
</selector>