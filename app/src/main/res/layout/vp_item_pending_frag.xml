<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hsc="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:paddingTop="10dip"
        android:layout_weight="1"
        android:gravity="bottom|center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/ll_button_group"
                android:layout_width="match_parent"
                android:layout_height="100dip"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/b_sell_limit"
                    style="@style/TextDescBig"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/order_radio_button_background_dark"
                    android:text="卖出\n限价" />

                <View
                    android:layout_width="0.1dip"
                    android:layout_height="match_parent"
                    android:background="@color/button_material_dark" />

                <Button
                    android:id="@+id/b_sell_stop_lost"
                    style="@style/TextDescBig"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/order_radio_button_background_dark"
                    android:text="卖出\n止损" />

                <View
                    android:layout_width="0.1dip"
                    android:layout_height="match_parent"
                    android:background="@color/button_material_dark" />

                <Button
                    android:id="@+id/b_buy_limit"
                    style="@style/TextDescBig"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/order_radio_button_background_dark"
                    android:text="买进\n限价" />

                <View
                    android:layout_width="0.1dip"
                    android:layout_height="match_parent"
                    android:background="@color/button_material_dark" />

                <Button
                    android:id="@+id/b_buy_stop_lost"
                    style="@style/TextDescBig"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/order_radio_button_background_dark"
                    android:text="买进\n止损" />


            </LinearLayout>

            <TextView
                style="@style/TextDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingTop="20dip"
                android:text="选择金额" />

            <trade.xkj.com.trade.Utils.view.CustomSeekBar
                android:layout_width="match_parent"
                android:layout_height="100dip" />

            <trade.xkj.com.trade.Utils.view.CustomASETGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                hsc:desc_text="价格为"
                hsc:iamge_visibility="false" />

            <trade.xkj.com.trade.Utils.view.CustomASETGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                hsc:desc_text="止损" />
            <trade.xkj.com.trade.Utils.view.CustomASETGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                hsc:desc_text="获利" />
            <trade.xkj.com.trade.Utils.view.CustomDateSelect
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></trade.xkj.com.trade.Utils.view.CustomDateSelect>
        </LinearLayout>

    </ScrollView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:gravity="center"
            android:layout_marginTop="30dip"
            android:layout_marginBottom="30dip"
            android:layout_marginLeft="40dip"
            android:background="@drawable/button_backgroud"
            android:layout_marginRight="40dip"
            android:text="下单"
            android:textSize="30dip"
            android:textColor="@android:color/white"/>

</LinearLayout>