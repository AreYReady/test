<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="0.dip"
    android:layout_height="wrap_content"
    android:layout_weight="7.5"
    android:gravity="left"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_normal"
        android:text="@string/close_time"
        android:textAppearance="@style/TextHeader" />

    <LinearLayout
        android:id="@+id/close_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@android:id/text1"
            style="@style/TextDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="16/5/5" />

        <Space
            android:layout_width="@dimen/space_mini"
            android:layout_height="@dimen/one_pixel" />

        <TextView
            android:id="@android:id/text2"
            style="@style/TextDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下午5:00" />

        <Space
            android:layout_width="@dimen/one_pixel"
            android:layout_height="@dimen/one_pixel" />
    </LinearLayout>
</LinearLayout>