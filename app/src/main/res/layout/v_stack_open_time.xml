<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="0dip"
    android:layout_height="wrap_content"
    android:layout_weight="4.5"
    android:gravity="left"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_normal"
        android:text="@string/open_time"
        android:textAppearance="@style/TextHeader" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_normal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/open_time1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextDesc"
            android:text="16/12/6"/>

        <Space
            android:layout_width="@dimen/space_mini"
            android:layout_height="@dimen/one_pixel" />

        <TextView
            android:id="@+id/open_time2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextDesc"
            android:text="上午7:26"/>

        <Space
            android:layout_width="@dimen/one_pixel"
            android:layout_height="@dimen/one_pixel" />
    </LinearLayout>
</LinearLayout>