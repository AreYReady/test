<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/space_big"
    android:paddingRight="@dimen/space_big"
    android:paddingTop="@dimen/space_xxbig"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_image"
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:background="@mipmap/menu_avatar" />

    <TextView
        android:id="@+id/tv_name"
        style="@style/TextDesc"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:layout_marginLeft="@dimen/space_xxbig"
        android:gravity="left"
         />

    <TextView
        style="@style/TextDesc"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_gravity="center"
        android:text="总收益率" />

    <TextView
        android:id="@+id/tv_tp"
        style="@style/TextDesc"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_weight="2"
        android:text="0.0%" />
</LinearLayout>