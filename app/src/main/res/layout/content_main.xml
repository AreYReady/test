<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="trade.xkj.com.trade.mvp.main_trade.v.MainTradeContentActivity"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/fl_main_trade_content"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"/>
        <Space
            android:id="@+id/s_temp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <trade.xkj.com.trade.Utils.view.PullBottomViewDragLayout
        android:id="@+id/dragLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/header"
            layout="@layout/f_balance_horizontal" />

        <LinearLayout
            android:id="@+id/desc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/toolbars_title_dark"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/congratulation_joining_background_dark"
                android:clipChildren="false"
                android:layerType="software">

                <trade.xkj.com.trade.Utils.view.CustomViewPager
                    android:id="@+id/cvp_indicator_item"
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:layout_marginLeft="100dp"
                    android:layout_marginRight="100dp" />
            </FrameLayout>

            <android.support.v4.view.ViewPager
                android:id="@+id/vp_indicator_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </trade.xkj.com.trade.Utils.view.PullBottomViewDragLayout>
</RelativeLayout>
