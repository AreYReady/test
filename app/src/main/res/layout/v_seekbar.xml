<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.xkj.trade.utils.view.AddSubEditText
        android:id="@+id/aset_aset"
        android:layout_width="250dip"
        android:layout_height="50dip"
        android:layout_gravity="center_horizontal"/>

    <RelativeLayout
        android:id="@+id/rl_seek_bar_desc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/amount_seek_bar_label1"
                style="@style/TextDesc"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
               />
            <TextView
                android:id="@+id/amount_seek_bar_label3"
                style="@style/TextDesc"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/amount_seek_bar_label0"
            style="@style/TextDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/space_normal"/>



        <TextView
            android:id="@+id/amount_seek_bar_label2"
            style="@style/TextDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"/>



        <TextView
            android:id="@+id/amount_seek_bar_label4"
            style="@style/TextDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="@dimen/space_normal"/>
    </RelativeLayout>

    <SeekBar
        android:id="@+id/amount_seek_bar_seek"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"/>
</LinearLayout>