<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/brand_color_dark"
    android:paddingLeft="@dimen/space_xxbig"
    android:paddingRight="@dimen/space_xxbig">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/logo_margin"
        android:contentDescription="@string/logo"
        android:src="@drawable/ic_menu_manage" />

    <LinearLayout
        android:id="@+id/welcome_abroad"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/logo_margin_half"
            android:gravity="center"
            android:text="@string/welcome_aboard"
            android:textAppearance="@style/TextMedium"
            android:textColor="?colorAccent" />

        <TextView
            android:id="@+id/welcome_abroad_message"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_xbig"
            android:gravity="center"
            android:singleLine="false" />
    </LinearLayout>

    <TextView
        android:id="@+id/environment_label"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_xxbig"
        android:paddingLeft="@dimen/space_small"
        android:paddingRight="@dimen/space_small"
        android:text="@string/environment" />

    <!--<com.leverate.sirix.view.HorizontalChooser-->
    <!--android:id="@+id/environment"-->
    <!--android:layout_width="fill_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_marginTop="@dimen/space_big"-->
    <!--android:spacing="@dimen/select_amount_item_spacing"-->
    <!--app:defaultWidthOfItem="@dimen/horizontal_chooser_item_width"-->
    <!--app:selectedItemColor="?android:textColorPrimary"-->
    <!--app:unSelectedItemColor="?textColorPrimarySemitransparent"-->
    <!--app:unselectedItemScale="1.0" />-->

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/edit_text_underline_size"
        android:layout_marginTop="@dimen/space_small"
        android:background="@color/colorAccent" />

    <EditText
        android:id="@+id/et_login_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_xxxbig"
        android:hint="@string/account_id"
        android:imeOptions="actionNext"
        android:inputType="number" />

    <EditText
        android:id="@+id/et_login_password"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_xxxbig"
        android:hint="@string/password"
        android:imeOptions="actionDone"
        android:inputType="textPassword" />

    <CheckBox
        android:id="@+id/remember_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_xbig"
        android:text="@string/remember_me"
        android:visibility="invisible" />

    <Button
        android:id="@+id/b_login_button"
        style="@style/Button.Action"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_xbig"
        android:text="@string/login" />

    <RelativeLayout
        android:id="@+id/dont_have_an_account"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_xbig"
        android:visibility="gone">

        <TextView
            android:id="@+id/dont_have_an_account_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:maxLines="1"
            android:singleLine="false"
            android:textColorLink="?colorAccent" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_xbig"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:singleLine="false"
            android:textAppearance="@style/TextSmall"
            android:textColor="@color/error_color_dark" />
    </LinearLayout>
</LinearLayout>