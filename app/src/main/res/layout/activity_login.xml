<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@mipmap/bg_login"
              android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/image_title_left"
        android:paddingTop="@dimen/space_xxbig"
        android:src="@mipmap/title"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="@dimen/px198"
        android:src="@mipmap/star"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/login_bg_2"/>

    <LinearLayout
        android:layout_marginTop="@dimen/px372"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px150"
        android:layout_marginLeft="@dimen/px214"
        android:layout_marginRight="@dimen/px214"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/login_info_bg">

        <ImageView
            android:layout_marginLeft="@dimen/px51"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/login_account"/>
        <EditText
            android:id="@+id/et_login_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="@string/account_id"
            android:inputType="number"
            android:textColor="@android:color/white"
            android:textColorHint="@color/text_color_pull_head_text_content"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px150"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/px51"
        android:layout_marginLeft="@dimen/px214"
        android:layout_marginRight="@dimen/px214"
        android:background="@drawable/login_info_bg">

        <ImageView
            android:layout_marginLeft="@dimen/px51"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/login_password"/>
        <EditText
            android:id="@+id/et_login_password"
            android:layout_width="fill_parent"
            android:background="@null"
            android:layout_height="wrap_content"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:textColor="@android:color/white"
            android:textColorHint="@color/text_color_pull_head_text_content"/>
    </LinearLayout>


    <CheckBox
        android:id="@+id/remember_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_xbig"
        android:text="@string/remember_me"
        android:textColor="@android:color/white"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/b_login_button"
        style="@style/Button.Action"
        android:layout_width="@dimen/px520"
        android:layout_height="@dimen/px100"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/space_xbig"
        android:text="@string/login"
        android:background="@drawable/button_login"
        android:textColor="@android:color/white"/>

    <RelativeLayout
        android:id="@+id/dont_have_an_account"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_xbig"
        android:visibility="gone">

        <TextView
            android:id="@+id/dont_have_an_account_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:maxLines="1"
            android:singleLine="false"
            android:textColorLink="?colorAccent"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_xbig"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:singleLine="false"
            android:textAppearance="@style/TextSmall"
            android:textColor="@color/error_color_dark"/>
    </LinearLayout>

</LinearLayout>