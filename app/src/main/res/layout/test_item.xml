<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="120dp"
    android:layout_marginLeft="40dip">

    <trade.xkj.com.trade.Utils.RoundImageView
        android:id="@+id/id_index_gallery_item_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_margin="5dp"
        android:scaleType="centerCrop" />

    <View
        android:id="@+id/v_temp"
        android:layout_width="1dip"
        android:layout_height="1dip"
        android:layout_below="@id/id_index_gallery_item_image" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_index_gallery_item_image"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/id_index_gallery_item_text_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="some info"
            android:textColor="#ff0000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/id_index_gallery_item_text_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingLeft="5dp"
            android:text="some info"
            android:textColor="#ff0000"
            android:textSize="15dp" />
    </LinearLayout>


</RelativeLayout>


