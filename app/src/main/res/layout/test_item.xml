<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="120dp"
    android:layout_marginLeft="40dip">

    <trade.xkj.com.trade.utils.RoundImageView
        android:id="@+id/id_index_gallery_item_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_margin="5dp"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:layout_width="120dip"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@id/id_index_gallery_item_image">


        <View
            android:id="@+id/v_temp"
            android:layout_width="1dip"
            android:layout_height="1dip"
            android:visibility="invisible"
            android:layout_centerHorizontal="true"
             />

        <TextView
            android:id="@+id/id_index_gallery_item_text_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/v_temp"
            android:text="some info"
            android:textColor="#ff0000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/id_index_gallery_item_text_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/v_temp"
            android:text="some info"
            android:textColor="#ffff"
            android:textSize="15dp" />

    </RelativeLayout>
</RelativeLayout>


