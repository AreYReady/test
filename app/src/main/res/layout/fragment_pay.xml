<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background_show_trade"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_xxbig"
        android:layout_marginLeft="@dimen/space_xxxbig"
        android:orientation="horizontal"
        >

        <TextView
            style="@style/TextDescBigWhile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pay_account_number"

            />

        <TextView
            android:id="@+id/tv_login_"
            style="@style/TextDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text=""/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_big"
        android:layout_marginLeft="@dimen/space_xxxbig"
        android:orientation="horizontal"
        >

        <TextView
            style="@style/TextDescBigWhile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pay_money"
            />

        <TextView
            android:id="@+id/tv_amount"
            style="@style/TextDesc"
            android:layout_width="wrap_content"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content"
            android:text="$50"/>
    </LinearLayout>

    <TextView
        style="@style/TextDescBigWhile"
        android:layout_width="wrap_content"
        android:paddingLeft="@dimen/space_xbig"
        android:paddingTop="@dimen/space_xxbig"
        android:layout_height="wrap_content"
        android:text="选择金额"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_pay_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    </android.support.v7.widget.RecyclerView>

    <TextView
        style="@style/TextDescBigWhile"
        android:layout_width="wrap_content"
        android:paddingLeft="@dimen/space_xbig"
        android:paddingTop="@dimen/space_xxbig"
        android:layout_height="wrap_content"
        android:text="选择支付方式"/>
    <LinearLayout
        android:id="@+id/ll_wx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/space_xxxbig"
        android:paddingRight="@dimen/space_big"
        android:paddingTop="@dimen/space_big">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:src="@mipmap/wx"
            />

        <TextView
            style="@style/TextDescBigWhile"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:gravity="left|center_vertical"
            android:paddingLeft="@dimen/space_xxxbig"
            android:text="微信支付"/>

        <RadioButton
            android:id="@+id/rb_wx"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:clickable="false"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_zfb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/space_xxxbig"
        android:paddingRight="@dimen/space_big"
        android:paddingTop="@dimen/space_big">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:src="@mipmap/zfb"
            />

        <TextView
            style="@style/TextDescBigWhile"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:gravity="left|center_vertical"
            android:paddingLeft="@dimen/space_xxxbig"
            android:text="支付宝支付"/>

        <RadioButton
            android:id="@+id/rb_zfb"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:clickable="false"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_yl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/space_xxxbig"
        android:paddingRight="@dimen/space_big"
        android:paddingTop="@dimen/space_big">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:src="@mipmap/yl"
            />

        <TextView
            style="@style/TextDescBigWhile"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:gravity="left|center_vertical"
            android:paddingLeft="@dimen/space_xxxbig"
            android:text="银联支付"/>

        <RadioButton
            android:id="@+id/rb_yl"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:clickable="false"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_enter_pay"
            style="@style/ButtonActionText"
            android:layout_width="270dip"
            android:layout_height="37dip"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/branded_action_button_light"
            android:layout_marginBottom="@dimen/space_big"
            android:gravity="center"
            android:text="充值"/>
    </RelativeLayout>

</LinearLayout>