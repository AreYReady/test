<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background_show_trade"
              android:orientation="vertical">

    <View
        android:layout_marginTop="@dimen/space_big"
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        style="@style/link_"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_big"
        android:layout_marginLeft="@dimen/space_xxxbig"
        android:orientation="horizontal"
        >
        <TextView
            style="@style/TextDescBigWhile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/pay_deposit_account_number"
            />
        <TextView
            android:id="@+id/tv_login_"
            style="@style/TextDesc"
            android:layout_width="70dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dip"
            android:textColor="@android:color/white"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@android:color/holo_red_dark"
            android:padding="@dimen/space_big_half"
            android:text="10001"/>
    </LinearLayout>
    <View
        android:layout_marginTop="@dimen/space_big"
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        style="@style/link_"/>
    <View
        android:layout_marginTop="@dimen/space_big"
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        style="@style/link_"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_big"
        android:layout_marginLeft="@dimen/space_xxxbig"
        android:orientation="horizontal"
        >

        <TextView
            style="@style/TextDescBigWhile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pay_deposit_money"
            />

        <TextView
            android:id="@+id/tv_amount"
            style="@style/TextDesc"
            android:layout_width="70dip"
            android:layout_marginLeft="150dip"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_red_dark"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="@dimen/space_big_half"
            android:layout_height="wrap_content"
            android:text="$50"/>
    </LinearLayout>
    <View
        android:layout_marginTop="@dimen/space_big"
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        style="@style/link_"/>
    <!--<TextView-->
        <!--style="@style/TextDescBigWhile"-->
        <!--android:layout_width="match_parent"-->
        <!--android:background="@color/background_indicator"-->
        <!--android:paddingLeft="@dimen/space_xbig"-->
        <!--android:layout_marginTop="@dimen/space_big"-->
        <!--android:paddingTop="@dimen/space_big"-->
        <!--android:paddingBottom="@dimen/space_big"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="选择金额"/>-->

    <android.support.v7.widget.RecyclerView
        android:paddingTop="@dimen/space_big"
        android:paddingBottom="@dimen/space_big"
        android:layout_marginLeft="@dimen/space_xxxxbig"
        android:layout_marginRight="@dimen/space_xxxxbig"
        android:id="@+id/rv_pay_amount"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    </android.support.v7.widget.RecyclerView>

